extends ../layout.pug 

block content 
    div(class="d-flex flex-row content mx-auto")
        div(class="text-center form-center")
            h1(class="h3 mb-3 font-weight-normal") Connexion
            form(class="card" method="post" action="/examen/connexion")
                div(class="card-body")
                    div(class="mb-3")
                        input(class="form-control" type="email" name="email" placeholder="Email")
                    div(class="mb-3")
                        input(class="form-control" type="password" name="password" placeholder="Mot de passe")
                    if errors
                        ul(class="my-2")
                            each error in errors
                                li(class="text-danger")= error
                    div(class="w-100")
                        input(type="submit" value="Connexion" class="btn btn-primary ms-auto d-block")